<div class="container" style="margin-top: 30px">
  <p>####리스트 추가####</p>
  <form action="/upcomings/create_upcoming" id="upcoming_create" method="post">
    <div class="form-group">
      <input type="text" class="form-control" name="title" placeholder="콘서트 이름">
    </div>
    <div class="form-group">
      <input type="text" class="form-control" name="artist" placeholder="아티스트">
    </div>
    <div class="form-group">
      <input type="text" class="form-control" name="video_url" placeholder="유투브 링크 아이디">
    </div>
    <div class="form-group">
      <input type="text" class="form-control" name="d_day" placeholder="공연일(양식 : 2017.05.24)">
    </div>
    <div class="form-group">
      <input type="text" class="form-control" name="place" placeholder="공연장소">
    </div>
    <div class="form-group">
      <input type="text" class="form-control" name="ticket_link" placeholder="티켓 링크">
    </div>
    <button type="submit" class="btn btn-default" id="upcoming_create">추가하기</button>
  </form>
  <hr>

  <div class="row">
    <!-- 제목 -->
    <div class="text-center" style="width:5%; display:inline-block;">번호</div>
    <div class="text-center" style="width:24%; display:inline-block;">콘서트 이름</div>
    <div class="text-center" style="width:16%; display:inline-block;">아티스트</div>
    <div class="text-center" style="width:12%; display:inline-block;">YouTube 링크</div>
    <div class="text-center" style="width:10%; display:inline-block;">공연일</div>
    <div class="text-center" style="width:8%; display:inline-block;">공연장소</div>
    <div class="text-center" style="width:13%; display:inline-block;">티켓링크</div>
    <div class="text-center" style="width:9%; display:inline-block;"></div>
    <hr>

    <% @upcomings.each do |upcoming| %>
      <form action="/upcomings/<%= upcoming.upcoming_token %>/update_upcoming" id="upcoming_<%= upcoming.id %>" method="get">
        <div class="text-center" style="width:5%; display:inline-block;"><%= upcoming.id %></div>
        <div class="form-group" style="width:24%; display:inline-block;">
          <input type="text" class="form-control" name="title" value="<%= upcoming.title %>">
        </div>
        <div class="form-group" style="width:16%; display:inline-block;">
          <input type="text" class="form-control" name="artist" value="<%= upcoming.artist %>">
        </div>
        <div class="form-group" style="width:12%; display:inline-block;">
          <input type="text" class="form-control" name="video_url" value="<%= upcoming.video_url %>">
        </div>
        <div class="form-group" style="width:10%; display:inline-block;">
          <input type="text" class="form-control" name="d_day" value="<%= upcoming.d_day %>">
        </div>
        <div class="text-center" style="width:8%; display:inline-block;">
          <input type="text" class="form-control" name="place" value="<%= upcoming.place %>">
        </div>
        <div class="text-center" style="width:13%; display:inline-block;">
          <input type="text" class="form-control" name="ticket_link" value="<%= upcoming.ticket_link %>">
        </div>
        <div class="text-center" style="width:6%; display:inline-block;">
          <button type="submit" class="btn btn-default" id="upcoming_<%= upcoming.id %>">수정</button>
        </div>
        <div class="text-center" style="width:3%; display:inline-block;">
          <a href="/upcomings/<%= upcoming.upcoming_token %>/destroy_upcoming" method="get">삭제</a>
        </div>
      </form>
      <hr>
    <% end %>
  </div>
</div>