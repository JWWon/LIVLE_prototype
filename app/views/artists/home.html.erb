<!-- Top NavBar -->
<div class="top-navbar">
  <div class="text-center">
    <p class="navbar-font">LIVLE</p>
  </div>
</div>

<div id="artists">
  <% @artists.each do |artist| %>
      <a href="/artists/<%= artist.id %>/list" method="get">
        <div class="artist_background" style="background: url(<%= image_url("#{artist.image}") %>) no-repeat center center; background-size: cover;">
          <div class="artist_name text-center">
            <h1><%= artist.artist %></h1>
          </div>
        </div>
      </a>
  <% end %>
</div>

<!-- Bottom NavBar -->
<div class="bottom-navbar">
  <div class="row">
    <div class="col-xs-4 text-center">
      <%= link_to "Stage", {:controller => :stages, :action => :home, :method => :get}, {class: "navbar-font"} %>
    </div>
    <div class="col-xs-4 text-center">
      <%= link_to "Upcoming", {:controller => :upcomings, :action => :home, :method => :get}, {class: "navbar-font"} %>
    </div>
    <div class="col-xs-4 text-center">
      <%= link_to "Artist", {:controller => :artists, :action => :home, :method => :get}, {class: "navbar-font"} %>
    </div>
  </div>
</div>

<script>
  var width = $(window).width();
  var img_height = width/2;

  $('.artist_background').css('height', img_height);
</script>