<div class="container" style="margin-top: 30px">
  <div class="text-center">
    <p>####리스트 추가####</p>
    <form action="/artists/upload_image" id="artist_create" method="post" enctype="multipart/form-data" style="margin-left: 20%; width: 60%;">
      <input type="text" class="form-control" name="artist" placeholder="아티스트 이름" style="margin-bottom: 30px;">
      <input type="file" name="image" accept="image/*" style="width:50%; display:inline-block;">
      <button type="submit" class="btn btn-default" id="artist_create">추가하기</button>
    </form>
  </div>
  <hr>
  <button type="submit" class="btn btn-default" id="artist_create">추가하기</button>
  <div class="row">
    <!-- 제목 -->
    <div class="text-center" style="width:5%; display:inline-block;">번호</div>
    <div class="text-center" style="width:30%; display:inline-block;">노래이름</div>
    <hr>
    <% @artists.each do |artist| %>
      <form action="/artists/<%= artist.id %>/update_artist" id="artist_<%= artist.id %>" method="get">
        <div class="text-center" style="width:5%; display:inline-block;"><%= artist.id %></div>
        <div class="form-group" style="width:30%; display:inline-block;">
          <input type="text" class="form-control" name="artist" value="<%= artist.artist %>">
        </div>
        <div class="text-center" style="width:6%; display:inline-block;">
          <button type="submit" class="btn btn-default" id="upcoming_<%= artist.id %>">수정</button>
        </div>
        <div class="text-center" style="width:3%; display:inline-block;">
          <a href="/artists/<%= artist.id %>/destroy_artist" method="get">삭제</a>
        </div>
      </form>
      <hr>
    <% end %>
  </div>
</div>