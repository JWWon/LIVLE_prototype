<div class="list-video">
  <div class="background-video">
    <img class="thumbnail-img" id="img_<%= stage.id %>"/>
  </div>

  <div class="descript-stage-video text-center">
    <h1><%= stage.title %></h1>
    <h2><%= stage.artist %></h2>
    <h3>@<%= stage.user_id %></h3>
    <div id="list_<%= stage.id %>"></div>
  </div>

  <a href="/stages/<%= stage.stage_token %>/watch" class="btn-video" method="get"></a>
</div>

<style>
  #list_<%= stage.id %> {
    position: absolute;
    top: 0;
    filter: grayscale(65%);
    background: rgba(0, 0, 0, 0.65);
    width: 100%;
    height: 100%;
  }
</style>

<script type="text/javascript" charset="utf-8">
  if(<%= stage.is_youtube %>)
      $('#img_<%= stage.id %>').attr({
          src: "http://img.youtube.com/vi/<%= stage.video_url %>/maxresdefault.jpg"
      });
  // else -> youtube가 아니라 S3일때 경우 처리
</script>