<div class="list-video">
  <div class="background-video">
    <img class="thumbnail-img" src="http://img.youtube.com/vi/<%= stage.youtube_id %>/maxresdefault.jpg"/>
    <div id="list_<%= stage.id %>"></div>
  </div>

  <div class="descript-stage-video text-center">
    <h1><%= stage.title %></h1>
    <h2><%= stage.artist %></h2>
    <h3>@<%= stage.user_id %></h3>
  </div>

  <a href="/stages/<%= stage.id %>/watch" class="btn-video" method="get"></a>
</div>

<style>
  #list_<%= stage.id %> {
    filter: grayscale(65%);
    /*background: #000000;*/
    background-size: cover;
    width: 100%;
    height: 100%;
    z-index: 99;
  }
</style>